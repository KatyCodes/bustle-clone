{{#if addNewArticle}}
  <h1>New Article</h1>
  <div class="container">
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="published">Published</label>
        {{input value=published id="published"}}
      </div>
      <div class="form-group">
        <label for="image">Image</label>
        {{input value=image id="image"}}
      </div>
      <div class="form-group">
        <label for="body">Body</label>
        {{input value=body id="body"}}
      </div>
      <button{{action 'saveArticle1'}}>Save</button>
    </form>
  </div>
  {{else}}
  <button {{action 'articleFormShow'}}>New Article</button>
{{/if}}
